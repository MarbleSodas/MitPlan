{
  "rules": {
    "userProfiles": {
      ".read": true,
      ".write": true,
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "plans": {
      ".read": true,
      ".write": true,
      ".indexOn": ["userId", "ownerId"],
      "$planId": {
        ".read": true,
        ".write": true
      }
    },
    "timelines": {
      ".read": true,
      ".write": true,
      ".indexOn": ["userId", "ownerId", "official", "isPublic", "likeCount"],
      "$timelineId": {
        ".read": "data.child('isPublic').val() === true || (auth != null && (data.child('userId').val() === auth.uid || data.child('ownerId').val() === auth.uid))",
        ".write": "(auth != null && (data.child('userId').val() === auth.uid || data.child('ownerId').val() === auth.uid || !data.exists())) && (data.child('official').val() !== true || !data.exists())",
        "likedBy": {
          ".read": true,
          ".write": true,
          "$userId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "userCollections": {
      ".read": true,
      ".write": true,
      "$userId": {
        ".read": true,
        ".write": true,
        "timelines": {
          ".read": true,
          ".write": true,
          "$timelineId": {
            ".read": true,
            ".write": true
          }
        }
      }
    }
  }
}
