{
  "rules": {
    "plans": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "shared": {
      "$planId": {
        ".read": "root.child('plans').child($planId).child('isPublic').val() == true",
        ".write": "root.child('plans').child($planId).child('isPublic').val() == true",

        "activeUsers": {
          "$sessionId": {
            ".validate": "newData.hasChildren(['userId', 'displayName', 'sessionId', 'joinedAt', 'lastActivity', 'isActive'])",
            "userId": {
              ".validate": "newData.isString() && ((auth != null && newData.val() == auth.uid) || (auth == null && newData.val() == 'anonymous'))"
            },
            "displayName": {
              ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
            },
            "sessionId": {
              ".validate": "newData.isString() && newData.val().length > 0"
            },
            "email": {
              ".validate": "newData.isString()"
            },
            "joinedAt": {
              ".validate": "newData.isNumber()"
            },
            "lastActivity": {
              ".validate": "newData.isNumber()"
            },
            "isActive": {
              ".validate": "newData.isBoolean()"
            }
          }
        },

        "changes": {
          "$changeId": {
            ".validate": "newData.hasChildren(['userId', 'sessionId', 'changeType', 'timestamp', 'data'])",
            "userId": {
              ".validate": "newData.isString() && ((auth != null && newData.val() == auth.uid) || (auth == null && newData.val() == 'anonymous'))"
            },
            "sessionId": {
              ".validate": "newData.isString() && newData.val().length > 0"
            },
            "changeType": {
              ".validate": "newData.isString() && newData.val().matches(/^(title|boss_selection|job_selection|tank_assignment|mitigation_assignment|mitigation_removal|tank_position_assignment)$/)"
            },
            "data": {
              ".validate": "newData.hasChildren()"
            },
            "timestamp": {
              ".validate": "newData.isNumber()"
            },
            "userDisplayName": {
              ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
            }
          }
        },

        "metadata": {
          "activeUserCount": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "lastActivity": {
            ".validate": "newData.isNumber()"
          },
          "sessionCount": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          }
        }
      }
    }
  }
}
